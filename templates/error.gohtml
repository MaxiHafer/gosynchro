<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>gosynchro</title>
</head>
<body>
    <img src="/gosynchro/static/gopher-crash.svg" alt="image of a sad gopher"/>
    <h3>{{if .Title}}{{ .Title }}{{else}}Error{{end}}</h3>
    {{if .Message}}
        <pre class="codeblock">{{ .Message }}</pre>
    {{end}}

    <style>
        .codeblock {
            text-align: left;
            margin: 0 auto;
            width: 80%;
            max-width: 800px;
            overflow: auto;
            padding: 10px;
            border: 1px solid gray;
            border-radius: 5px;
            background-color: lightgray;
        }

        body {
            font-family: sans-serif;
            text-align: center;
        }
        img {
            width: 200px;
            height: 200px;
        }
    </style>
</body>
</html>